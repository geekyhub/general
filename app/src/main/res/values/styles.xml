    <style name="ThemeNoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_shadow</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="separator_horizontal">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="separator_vertical">
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="dialog_container_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/distance_item_small</item>
        <item name="android:paddingTop">@dimen/distance_item_small</item>
        <item name="android:paddingLeft">@dimen/margin_huge</item>
        <item name="android:paddingRight">@dimen/margin_huge</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normal_typo</item>
        <item name="android:textColor">@color/menu_header</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_mid</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">49</item>
        <item name="android:background">@drawable/button_dialog_background_selector</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColor">@color/black</item>
    </style>
